<p id="notice"><%= notice %></p>

<p>
  <strong>Text:</strong>
  <%= @notebook.text %>
</p>

<p>
  <strong>Date:</strong>
  <%= @notebook.date %>
</p>

<p>
  <strong>Title:</strong>
  <%= @notebook.title %>
</p>
<h2>versions</h2>
<% @notebook.versions.each do |version| %>
  <p>
<%= link_to 'View version',  notebook_version_path(@notebook, version) %>

  </p> 
<% end %> 
<%= link_to 'Edit', edit_notebook_path(@notebook) %> |
<%= link_to 'Back', notebooks_path %>

<h2>Comments</h2>
<% @notebook.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@notebook, @notebook.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', notebook_path %>
| <%= link_to 'Edit', edit_notebook_path(@notebook) %>