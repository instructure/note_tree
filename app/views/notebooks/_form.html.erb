<%= form_for(@notebook) do |f| %>
  <% if @notebook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@notebook.errors.count, "error") %> prohibited this notebook from being saved:</h2>

      <ul>
      <% @notebook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Choose Lecture" %>
    <%= f.select :lecture_id, @lectures %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <div id="notebook">
    <div class="field">
      <%= f.text_field :title, placeholder: "Enter Note Title" %>
    </div>
    <div class="field">
      <%= f.text_area :text, placeholder: "Start your note here."%>
    </div>
  </div>
<% end %>
