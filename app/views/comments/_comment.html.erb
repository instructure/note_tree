<p class="comment">
  <strong>Commenter:</strong>
	<%= comment.account.full_name %>
</p>
 
<p class="comment">
  <strong>Comment:</strong>
  <%= comment.body %>
</p>

<p class="comment">
  <% if current_account.teacher? || comment.account == current_account %>
  <%= link_to 'Destroy Comment', [comment.notebook, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>