<p id="notice"><%= notice %></p>

<div id="show_lecture">
  <p id="lecture_title">
    <%= @lecture.title %>
  </p>
  <p class="course_name">
    <%= @lecture.course.name %>
  </p>
  <p id="lecture_summary">
    <%= @lecture.summary %>
  </p>
  <p>
    <strong>Date:</strong>
    <%= @lecture.date %>
  </p>
</div>

<div class="show_options">
	<% if current_account.teacher? %>
		<%= link_to 'Edit', edit_course_lecture_path(@course, @lecture) %> |
	<% end %>
