<h1>Listing lectures</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Date</th>
      <th>Title</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.course.name %></td>
        <td><%= lecture.date %></td>
        <td><%= lecture.title %></td>
        <td><%= lecture.summary %></td>
        <td><%= link_to 'Show', course_lecture_path(lecture.course, lecture) %></td>
        <% if current_account.teacher? %>
          <td><%= link_to 'Edit', edit_course_lecture_path(lecture.course, lecture) %></td>
          <td><%= link_to 'Destroy', course_lecture_path(lecture.course, lecture), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lecture', new_course_lecture_path(@course) %>
