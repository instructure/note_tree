margin: 20px;
padding-left: 25px;
">
<a id="course_link" href="/courses/">Courses</a>
<a id="notes_link" href="/notebooks/">Notes</a>
</nav>
<p id="notice"><%= notice %></p>

<div id="show_course">
  <p id="course_short_name">
    <%= @course.short_name %>
  </p>

  <p id="course_name">
    <%= @course.name %>
  </p>

  <p id="course_description">
    <%= @course.description %>
  </p>

  <p>
    <strong>Course Duration:</strong>
    <%= @course.start_date %> -
    <%= @course.end_date %>
  </p>
</div>

<div id="course_options">
  <%= link_to "Take Notes!", {:controller => "notebooks", :action => "new", :course_id => @course.id} %> |
  <% if current_account.teacher? %>
    <%= link_to 'Edit', edit_course_path(@course) %> |
    <%= link_to 'Add Lecture', new_course_lecture_path(@course) %> |
  <% end %>
  <%= link_to 'Back', courses_path %>
</div>
